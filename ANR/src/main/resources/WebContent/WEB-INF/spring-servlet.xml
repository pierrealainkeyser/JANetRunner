<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<mvc:annotation-driven/>

	<mvc:resources mapping="/**" location="classpath:/web-resources/" />
	<mvc:resources mapping="/js/*.*" location="classpath:/web-resources/js" />
	<mvc:resources mapping="/css/*.*" location="classpath:/web-resources/css" />
	<mvc:resources mapping="/img/*.*" location="classpath:/web-resources/img" />
	<mvc:resources mapping="/font/*.*" location="classpath:/web-resources/fonts" />	
</beans>	